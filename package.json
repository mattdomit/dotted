{
  "name": "dotted",
  "version": "2.0.0",
  "private": true,
  "description": "Hyperlocal community-driven daily Dish of the Day marketplace",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "pnpm --filter @dotted/db db:migrate",
    "db:migrate:deploy": "pnpm --filter @dotted/db db:migrate:deploy",
    "db:seed": "turbo db:seed",
    "db:studio": "pnpm --filter @dotted/db studio",
    "clean": "turbo clean"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
